{# Labels #}

{% block checkbox_label %}
{% spaceless %}
{% if widget_label is not defined and attr.widget_label is defined %}
{% set widget_label = attr.widget_label %}
{% endif %}
{% if widget_label is defined %}
{% set label = widget_label %}
{{ block('form_label') }}
{% endif %}
{% endspaceless %}
{% endblock %}

{% block form_label %}
{% spaceless %}
    {% if not compound %}
        {% set label_attr = label_attr|merge({'for': id}) %}
    {% endif %}
    {% if required %}
        {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
    {% endif %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    <label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>{{ label|trans({}, translation_domain) }}</label>
{% endspaceless %}
{% endblock form_label %}

{# Rows #}

{% block repeated_row %}
{% spaceless %}
    {#
    No need to render the errors here, as all errors are mapped
    to the first child (see RepeatedTypeValidatorExtension).
    #}
    {{ block('form_rows') }}
{% endspaceless %}
{% endblock repeated_row %}

{% block form_row %}
{% spaceless %}
    {% set label_vars = {} %}
    {% if widget_label is defined %}
    {% set label_vars = label_vars|merge({'widget_label': widget_label}) %}
    {% endif %}
    {% set form_type = form_type|default('vertical') %}
    {% if form_type == 'horizontal' %}
    {% set label_vars = label_vars|merge({'label_attr': {'class': 'control-label'}}) %}
    {% set control_group_class = 'control-group '~attr.control_group_class|default('') %}
    {% if errors|length > 0 %}
    {% set control_group_class = control_group_class~' error' %}
    {% endif %}
    <div class="{{ control_group_class }}">
        {{ form_label(form, label|default(null), label_vars) }}
        <div class="controls">
            {{ form_widget(form, {'form_type': form_type}) }}
            {% if errors|length > 0 %}
            <span class="help-inline">{{ form_errors(form, {'form_type': form_type}) }}</span>
            {% endif %}
            {% if attr.help_inline is defined %}{{ block('help_inline') }}{% endif %}
        </div>
    </div>
    {% else %}
    <div>
        {{ form_label(form, label|default(null), label_vars) }}
        {{ form_errors(form, {'form_type': form_type}) }}
        {{ form_widget(form, {'form_type': form_type}) }}
    </div>
    {% endif %}
{% endspaceless %}
{% endblock form_row %}

{% block help_inline %}{% spaceless %}
{% set help_inline = attr.help_inline %}
<span class="help-inline">
    {% if help_inline[0] is defined %}
        {% if help_inline|length == 2 %}
            {{ help_inline[0]|trans(help_inline[1], help_inline[2])|markdown }}
        {% elseif help_inline|lenggth == 1 %}
            {{ help_inline[0]|trans(help_inline[1])|markdown }}
        {% else %}
            {{ help_inline[0]|trans|markdown }}
        {% endif %}
    {% else %}
        {{ attr.help_inline|markdown }}
    {% endif %}
</span>
{% endspaceless %}{% endblock %}

{% block hidden_row %}
    {{ form_widget(form) }}
{% endblock hidden_row %}

{# Misc #}

{% block form_enctype %}
{% spaceless %}
    {% if multipart %}enctype="multipart/form-data"{% endif %}
{% endspaceless %}
{% endblock form_enctype %}

{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
        {% for error in errors %}
            {{
                error.messagePluralization is null
                    ? error.messageTemplate|trans(error.messageParameters, 'validators')
                    : error.messageTemplate|transchoice(error.messagePluralization, error.messageParameters, 'validators')
            }}
            {% if not loop.last %},{% endif %}
        {% endfor %}
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}

{% block form_rest %}
{% spaceless %}
    {% for child in form %}
        {% if not child.rendered %}
            {{ form_row(child) }}
        {% endif %}
    {% endfor %}
{% endspaceless %}
{% endblock form_rest %}

{# Support #}

{% block form_rows %}
{% spaceless %}
    {% set child_vars = {} %}
    {% if form_type is defined %}
    {% set child_vars = child_vars|merge({'form_type': form_type}) %}
    {% endif %}
    {% for child in form %}
        {{ form_row(child, child_vars) }}
    {% endfor %}
{% endspaceless %}
{% endblock form_rows %}

{% block widget_attributes %}
{% spaceless %}
    {% if disabled %}
    {% set attr = attr|merge({'class': 'disabled '~attr.class|default('')}) %}
    {% endif %}
    id="{{ id }}" name="{{ full_name }}"{% if read_only %} readonly="readonly"{% endif %}{% if disabled %} disabled="disabled"{% endif %}{% if required %} required="required"{% endif %}{% if max_length %} maxlength="{{ max_length }}"{% endif %}{% if pattern %} pattern="{{ pattern }}"{% endif %}
    {% for attrname, attrvalue in attr %}{% if attrname in ['placeholder', 'title'] %}{{ attrname }}="{{ attrvalue|trans({}, translation_domain) }}" {% else %}{{ attrname }}="{{ attrvalue }}" {% endif %}{% endfor %}
{% endspaceless %}
{% endblock widget_attributes %}

{% block widget_container_attributes %}
{% spaceless %}
    {% if id is not empty %}id="{{ id }}" {% endif %}
    {% for attrname, attrvalue in attr %}{{ attrname }}="{{ attrvalue }}" {% endfor %}
{% endspaceless %}
{% endblock widget_container_attributes %}

